<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>
<%= form_for(@message, html: {class: "form-horizontal well"}) do |f| %>
<div class="form-group">
  <label for="" class="col-sm-1 control-label">名前:</label>
  <div class="col-sm-11">
    <%= f.text_field :name, :class => "form-control", :placeholder => "Your name" %> 
  </div>
</div>

<div class="form-group">
  <label for="" class="col-sm-1 control-label">内容:</label>
  <div class="col-sm-11">
    <%= f.text_area :body, :class => "form-control", :placeholder => "Textarea", :rows => 3 %> 
  </div>
</div>
<div class="form-group create-message-area">
  <%= f.submit class: "btn btn-sm btn-primary center-block" %>
</div>
<% end %>